.nosbox-part
  margin-top 50px
  margin-bottom 20px

  .nosbox-content-left
    float left
    width 50%
    height 370px
    position relative

  .nosbox-content-right
    float right
    width 50%
    height 370px
    position relative
    text-align right
    .satisfy-little-title-orange
      margin-top 30px

.nosbox-list
  width 38px
  margin-right 15px

.nosbox-product
  margin-top 15px
  margin-left 20px

.nosbox-images
  width 350px
  height 350px
  margin-top -40px

.nosbox-title
  line-height 86px

.nosbox-button
  font-size 16px
  position absolute
  text-decoration none
  text-align right

.button-buy-box
  bottom -20px
  right 0px

.button-buy-products
  background-color $yellow-dark
  border-color $yellow-dark
  bottom -20px
  left 0px

.button-buy-products:hover
  color $yellow-dark

.nosbox-comments-left
  float left
  width 47%
  position relative
  margin-top 50px
  h3
    margin-bottom 10px
  p
    margin-bottom 20px

.nosbox-comments-right
  float right
  width 47%
  position relative
  margin-top 120px
  h3
    margin-bottom 10px
  p
    margin-bottom 20px

@media (max-width: 1050px)

  .content
    width 650px
    margin 0 auto

  .noxbox-content-left
    height 400px

  .nosbox-content-right
    width 45%
    height 400px

  .nosbox-images
    width 300px
    height 300px
    margin-top -40px

  .button-buy-products
    background-color $yellow-dark
    border-color $yellow-dark
    bottom 30px
    left 120px

@media (max-width: 650px)

  .content
    width 100%

  .nosbox-part
    text-align center
    margin-top -100px
    .nosbox-content-left
      width 100%
    .nosbox-content-right
      text-align center
      width 100%
      img
        margin-bottom 100px

  .button-content
    width 300px
    margin 0 auto

  .button-buy-box
    position relative
    top -40px
    right 0px

  .button-buy-products
    position relative
    top -110px
    left 0px

  .nosbox-comments-left
    width 85%

  .nosbox-comments-right
    float none

  .nosbox-images
    width 300px
    height 300px
    margin-top -40px

  .nosbox-comments-left
    margin-left 7%
    width 85%
    position relative
    margin-top 80px
    h3
      margin-bottom 10px
    p
      margin-bottom 20px

  .nosbox-comments-right
    margin-left 7%
    width 85%
    position relative
    margin-top 120px
    h3
      margin-bottom 10px
    p
      margin-bottom 20px

.ariane-string
  nav
    margin-top 45px
    margin-bottom 45px
    ul
      li
        display inline-block
        padding-left 4px
        padding-right 4px
        img
          width 40px

.baby-form
  h1
      margin-bottom 30px

  .form
      position relative

  .form-part
      float left
      width 450px
      height 420px
      margin-left 27px

  .form-part-buy
      float left
      width 450px
      height auto
      margin-left 27px
      margin-bottom 40px

  .form-title
      margin-bottom 25px

  .form-zone
      margin-bottom 25px

      textarea
          height 70px

  .form-zone-card
      margin-bottom 25px

  .form-build

      textarea
          height 110px

  .valid
      margin-top 70px

  .form-zone-check
      margin-bottom 25px

      input
          margin-top 10px
          margin-right 10px

      .form-checklist

          .form-check
              display inline-block
              width 147px

              label
                  width 100px

           .form-buy-check

               label
                   width 300px

  .form-input
      width 400px
      border-radius 10px
      border $pink-dark solid 1px
      margin 5px
      padding 8px

      .form-input-size
          width 100%

  .form-label
      margin-left 6px

  .form-label-choice
      margin-left 6px
      margin-right 400px

  .form-button
      height auto
      width 120px
      position absolute
      right 50px
      bottom 10px

  .form-buy-button
      height auto
      width 120px
      position absolute
      right 55px
      bottom 90px

  .email-confirm
      text-align right
      margin-top 90px
      margin-right 40px

  .buy-recap
     margin-bottom 60px

     h1
         margin-left 20px
         margin-bottom 40px

     .buy-table
         border solid 2px $blue-light
         width 800px
         padding 12px 12px 0px 12px
         border-radius 10px
         margin 0 auto

         table
             text-align center
             width 100%

             .left
                 text-align left

             .right
                text-align right

             .bold
                 font-weight 400

             tr
                 height 30px

.validation
    height 480px

    .lato-text-bluedark
        margin-top 20px
        text-align right

    .validation-img
        text-align center
        margin-top 30px

        img
            width 250px

    .validation-link
        text-align center
        margin-top 20px

        a
            text-decoration none




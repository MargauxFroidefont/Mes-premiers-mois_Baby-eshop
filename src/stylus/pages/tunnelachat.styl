  .ariane-string
    text-align center
    nav
      ul
        width 550px
        margin 0 auto
        li
          line-height 30px
          img
            width 40px

  .baby-form

      h1
          margin-bottom 30px
          text-align center

      .form
          position relative
          margin-bottom 60px

          .form-part-buy
              float none
              margin 0 auto
              width 430px
              height 110%

          .form-part
              float none
              margin 0 auto
              width 430px
              height 110%

          .form-zone
              margin-bottom 30px


          .form-zone-check

              .form-checklist

                  .form-check
                      display inline-block
                      width 130px

          .form-label
              margin-left 10px

          .form-buy-button
              height auto
              width 120px
              position absolute
              right 140px
              bottom 5px

          .form-button
              height auto
              width 120px
              position absolute
              right 140px
              bottom -60px

          .paypal

              h1
                  margin-top 30px

          .valid
              margin-top 40px


      .buy-recap

          h1
             margin-left 0px

          .buy-table
              width 650px


@media(max-width: 650px)

  .ariane-string
    nav
      text-align center
      margin-top 20px
      ul
        width 220px
        margin 0 auto
        li
          line-height 30px
          font-size 14px
          img
            width 30px

  .baby-form

      h1
          margin-bottom 30px
          text-align center

      .buy-recap

          .buy-table
              width 350px

      .email-confirm
          text-align center

  .form-zone
      margin-left 5px

      .form-input
          width 370px

  .form-zone-check
      margin-left 10px

  .form-buy-button
      height auto
      width 120px
      position absolute
      left 35%

  .form-button
      height auto
      width 120px
      position absolute
      left 35%

  .validation
    width 85%
    margin-left 7%

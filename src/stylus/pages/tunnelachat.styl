.ariane-string
  nav
    margin-top 45px
    margin-bottom 45px
    ul
      li
        display inline-block
        padding-left 4px
        padding-right 4px
        img
          width 40px

.baby-form
  h1
      margin-bottom 30px

  .form
      position relative

  .form-part
      float left
      width 480px
      height 420px

  .form-title
      margin-bottom 25px

  .form-zone // groupe avec un label et un input
      margin-bottom 25px

      textarea
          height 70px

  .form-zone-check
      margin-bottom 25px

      input
          margin-top 10px
          margin-right 10px

      .form-checklist

          .form-check
              display inline-block
              width 147px

              label
                  width 100px

  .form-input
      width 400px
      border-radius 10px
      border $pink-dark solid 1px
      margin 5px
      padding 8px

      .form-input-size
          width 100%

  .form-label
      margin-left 6px

  .form-label-choice
      margin-left 6px
      margin-right 400px

  .form-button
      height auto
      width 120px
      position absolute
      right 75px
      bottom 10px


@media(max-width: 1050px)

  .ariane-string
    nav
      ul
        width 550px
        margin 0 auto
        li
          line-height 30px
          img
            width 40px

  .baby-form

      h1
          margin-bottom 30px
          margin-left 185px

      .form
          position relative
          margin-bottom 90px

          .form-part
              float none
              margin 0 auto
              width 430px
              height 360px

          .form-zone
              margin-bottom 30px


          .form-zone-check

              .form-checklist

                  .form-check
                      display inline-block
                      width 130px

          .form-label
              margin-left 10px

          .form-button
              height auto
              width 120px
              position absolute
              right 135px
              bottom -90px

@media(max-width: 650px)

  .ariane-string
    nav
      text-align center
      margin-top 20px
      ul
        width 220px
        margin 0 auto
        li
          line-height 30px
          font-size 14px
          img
            width 30px

  .baby-form

      h1
          margin-bottom 30px
          margin-left 60px

  .form-zone
      margin-left 5px

      .form-input
          width 370px

  .form-zone-check
      margin-left 10px

  .form-button
      height auto
      width 120px
      position relative
      margin 0 auto

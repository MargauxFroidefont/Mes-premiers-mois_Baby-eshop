.ariane-string
  nav
    margin-top 45px
    margin-bottom 45px
    ul
      li
        display inline-block
        padding-left 4px
        padding-right 4px
        img
          width 40px

.baby-form
  h1
      margin-bottom 30px

  .form
      width 450px
      position relative

  .form-inscription
      height 500px

  .form-title
      margin-bottom 25px

  .form-zone // groupe avec un label et un input
      margin-bottom 25px

  .form-zone-check
      margin-bottom 55px

  .form-input
      width 400px
      border-radius 10px
      border $pink-dark solid 1px
      margin 5px
      padding 8px

      .form-input-size
          width 100%

  .form-label
      margin-left 6px

  .form-buton
      height auto
      width 120px
      position absolute
      right 4%
      top 170px


  .form-buton-inscription
      height auto
      width 120px
      position absolute
      right 4%
      top 340px

  .form-popup-messages
      position absolute
      top 250px

      .popup-error
          color $red

      .popup-validatio  n
        color $green-dark

  .form-popup-messages-inscription
      position absolute
      top 400px

      .popup-error
          color $red

      .popup-validation
          color $green-dark




